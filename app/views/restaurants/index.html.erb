<h1>List of the restaurants</h1>
<br>

<% @restaurants.each do |restaurant| %>
  <ul>
    <li><%= restaurant.name %></li>
    <li><%= restaurant.category %></li>
    <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
  </ul>
<% end %>
<br>

<%= link_to "Create a new restaurant", new_restaurant_path, class: "btn btn-danger"%>
