<h1><%= @restaurant.name %></h1>
<br>

<p><strong>Details</strong></p>
<ul>
  <li>Address: <%= @restaurant.address %></li>
  <li>Phone number: <%= @restaurant.phone_number %></li>
  <li>Category: <%= @restaurant.category %></li>
</ul>
<br>

<p><strong>Reviews</strong></p>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>Rating: <%= review.rating %></li>
    <li>Content: <%= review.content %></li>
  <% end %>
</ul>
<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-danger"%>
<br>

<%= link_to "Back to restaurants index ", restaurants_path, class: "btn btn-primary"%>
